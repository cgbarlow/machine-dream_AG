{
  "name": "machine-dream-poc",
  "version": "0.1.0",
  "description": "Proof-of-Concept: Continuous Thinking and Machine Dreaming with Cognitive Puzzle Solver",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "machine-dream": "dist/cli-bin.js"
  },
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc && cp src/cli-bin.js dist/cli-bin.js",
    "build:all": "npm run build:cli",
    "dev": "tsx watch src/index.ts",
    "tui": "tsx src/tui-ink/tui.tsx",
    "tui:poc": "tsx src/tui-ink/poc.tsx",
    "llm:play": "tsx src/cli-bin.ts llm play",
    "llm:stats": "tsx src/cli-bin.ts llm stats",
    "llm:dream": "tsx src/cli-bin.ts llm dream",
    "llm:benchmark": "tsx src/cli-bin.ts llm benchmark",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:benchmark": "node tests/benchmarks/run-all.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist",
    "start": "node dist/index.js"
  },
  "keywords": [
    "continuous-thinking",
    "machine-dreaming",
    "cognitive-architecture",
    "sudoku",
    "puzzle-solving",
    "reasoningbank",
    "claude-flow"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/blessed": "^0.1.27",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "neo-blessed": "^0.2.0",
    "react": "^19.2.3",
    "string-width": "^8.1.0"
  }
}
